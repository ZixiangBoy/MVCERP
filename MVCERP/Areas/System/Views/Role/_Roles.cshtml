@model PetaPoco.Page<DbEntity.t_role>

@{
    Layout = null;
}

<table id="tableuser" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>角色名</th>
            <th>描述</th>
            <th>创建人</th>
            <th>创建时间</th>
            <th>启用</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items == null || Model.Items.Count < 1)
        {
            <tr>
                <td colspan="6" class="col-center">没有查询到数据</td>
            </tr>
        }
        @foreach (var role in Model.Items)
        {
            <tr>
                <td>@Html.DisplayFor(m => role.Name)</td>
                <td>@Html.DisplayFor(m => role.Desc)</td>
                <td>@Html.DisplayFor(m => role.Creator)</td>
                <td>@Html.DisplayFor(m => role.CreateDate)</td>
                <td>@Html.CheckBoxFor(m => role.IsUsing)</td>
                <td>@Html.ActionLink("修改","") | @Html.ActionLink("删除", "")</td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("~/Views/Shared/_Pager.cshtml", Model.Pager)


